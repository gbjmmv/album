
.coupon-page.data-v-96ba783d {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 标签栏样式 */
.tab-container.data-v-96ba783d {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.tab-item.data-v-96ba783d {
  position: relative;
  padding: 16rpx 20rpx;
  font-size: 30rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tab-item.active.data-v-96ba783d {
  color: #ff6b81;
  font-weight: bold;
}
.tab-line.data-v-96ba783d {
  position: absolute;
  bottom: -10rpx;
  width: 60rpx;
  height: 6rpx;
  background-color: #ff6b81;
  border-radius: 3rpx;
}

/* 内容区域样式 */
.content-area.data-v-96ba783d {
  flex: 1;
  padding: 30rpx;
  position: relative;
}
.bg-0.data-v-96ba783d {
  background-color: #fff5f7; /* 待使用背景色 */
}
.bg-1.data-v-96ba783d {
  background-color: #f0f8ff; /* 待兑现背景色 */
}
.bg-2.data-v-96ba783d {
  background-color: #f5fff0; /* 已完成背景色 */
}

/* 创建按钮 */
.create-btn.data-v-96ba783d {
  position: fixed;
  bottom: 80rpx;
  right: 40rpx;
  height: 80rpx;
  background-color: #ff6b81;
  color: white;
  border-radius: 50rpx;
  padding: 12rpx 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 129, 0.3);
  z-index: 2;
