
.container {
  padding: 30rpx;
}
.info-row {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}
.value-section {
  flex: 1;
  display: flex;
  align-items: center;
}
.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.input-field {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
  border-bottom: 1px solid #007AFF;
}
.edit-icon {
  margin-left: 20rpx;
  padding: 10rpx;
}

/* 点击状态 */
.edit-icon:active {
  opacity: 0.7;
}
.avatar-section {
  background: linear-gradient(to bottom, skyblue, white);
  background-size: cover;
  background-position: center;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.avatar-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  z-index: 1;
}
.avatar-section image,
.avatar-section text {
  position: relative;
  z-index: 2;
}
.avatar-section text {
  color: #000000;
  font-size: 42rpx;
  font-weight: bold;
}
.avatar-section image {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin-bottom: 40rpx;
}

